<Page x:Class="CookingCraft.MainGame"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CookingCraft"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Background="White"
      Title="MainGame">

    <Grid>
        <!--Grid Column-Definitionen-->

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <!--1/4 of the screens width-->
            <ColumnDefinition Width="2*"/>
            <!--1/2 of the screens width-->
            <ColumnDefinition Width="*"/>
            <!--1/4-->
        </Grid.ColumnDefinitions>

        <!--Grid Row-Definitionen-->
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <!--1/8 of the screens height-->
            <RowDefinition Height="5*"/>
            <!--7/8-->
        </Grid.RowDefinitions>



        <!--ingredients list-->
        <Label 
    Grid.Column="0" Grid.Row="0" Content="Ingredients:" FontSize="20"
    HorizontalAlignment="Center" VerticalAlignment="Center"/>


        <ListView Grid.Column="0" Grid.Row="1" >
            <!--Ingredients-->

        </ListView>

        <!--TextBox for kitchenname-->
        <TextBox
    x:Name="TextBoxKitchenname"
    Grid.Column="1" Grid.Row="0" 
    HorizontalAlignment="Center" VerticalAlignment="Center"
    FontSize="20"
    Text="CookiesKitchen" BorderThickness="0"/>

        <!--Achievments Button-->
        <Button
    x:Name="ButtonAchievments"
    Grid.Column="2" Grid.Row="0" 
    HorizontalAlignment="Right" VerticalAlignment="Top"
    FontSize="20"
    Content="A" Width="50" Height="50"
    Margin="5"/>

        <!--Shop Button-->
        <Button
    x:Name="ButtonShop"
    Grid.Column="2" Grid.Row="1" 
    HorizontalAlignment="Right" VerticalAlignment="Top"
    FontSize="20"
    Content="S" Width="50" Height="50"
    Margin="5"/>
    </Grid>
</Page>
