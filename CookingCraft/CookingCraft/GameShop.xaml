<Window x:Class="CookingCraft.GameShop"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CookingCraft"
        mc:Ignorable="d"
        Title="GameShop" Height="450" Width="800">
    <Grid>
        <!---Shop Items mit Preis, Name und Sprite-->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>

        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="0.5*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Border Grid.Column="0" BorderThickness="1" BorderBrush="LightGray" Grid.ColumnSpan="5" Background="LightSteelBlue"/>
        <Label Grid.Column="0" Grid.Row="0" Content="Shop Items:" FontSize="20"
               HorizontalAlignment="Center" VerticalAlignment="Center"/>

        <Button Grid.Column="0" Grid.Row="3" Content="💰 5" FontSize="40" Background="Moccasin" Margin="8" BorderBrush="Black" BorderThickness="3" Click="Button_Click"/>
        <Button Grid.Column="1" Grid.Row="3" Content="💰 5" FontSize="40" Background="Moccasin" Margin="8" BorderBrush="Black" BorderThickness="3" Click="Button_Click"/>
        <Button Grid.Column="2" Grid.Row="3" Content="💰 5" FontSize="40" Background="Moccasin" Margin="8" BorderBrush="Black" BorderThickness="3" Click="Button_Click"/>
        <Button Grid.Column="3" Grid.Row="3" Content="💰 5" FontSize="40" Background="Moccasin" Margin="8" BorderBrush="Black" BorderThickness="3" Click="Button_Click"/>
        <Button Grid.Column="4" Grid.Row="3" Content="💰 5" FontSize="40" Background="Moccasin" Margin="8" BorderBrush="Black" BorderThickness="3" Click="Button_Click"/>

        

    </Grid>
</Window>
